Project "Мой Проект" {
  database_type: 'PostgreSQL'
  Note: 'Это демонстрационный проект с поддержкой русского языка'
}

Table "users" { // Используем латинское имя таблицы
  id int [pk, increment]
  name varchar
  email varchar
  created_at timestamp
  Note: 'Таблица для пользователей с именами на русском' // Кириллический текст в Note
}

Table "posts" { // Используем латинское имя таблицы
  id int [pk, increment]
  title varchar
  text text
  author_id int [ref: > users.id]
  created_at timestamp
  Note: 'Таблица для постов с заголовками на русском' // Кириллический текст в Note
}